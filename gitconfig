[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	df = diff
	lg = log -p
	ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	la = "!git config -l | grep alias | cut -c 7-"
	last = log -1 HEAD
	# Removed unmerged branches
	delete-merged = "!f() { git checkout --quiet master && git branch --merged | grep --invert-match '\\*' | xargs -n 1 git branch --delete; git checkout --quiet @{-1}; }; f"
	# Commit all changes
	ca = !git add -A && git commit -av
	# Find commits by commit message
	fm = "!f() { git log --pretty=format:'%C(yellow)%h  %Cblue%ad  %Creset%s%Cgreen  [%cn] %Cred%d' --decorate --date=short --grep=$1; }; f"
	# Find commits by source code
	fc = "!f() { git log --pretty=format:'%C(yellow)%h  %Cblue%ad  %Creset%s%Cgreen  [%cn] %Cred%d' --decorate --date=short -S$1; }; f"
	# Show files ignored by git:
	ign = ls-files -o -i --exclude-standard
	amend = "!git add -A && git commit --amend"
	alias = "!git config --get-regexp ^alias."

[core]
	editor = vim
	excludesfile = ~/dotfiles/gitignore_global
[color]
	# Use colors in Git commands that are capable of colored output when
	# outputting to the terminal. (This is the default setting in Git â‰¥ 1.8.4.)
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[merge "ours"]
	name = "Keep ours merge"
	driver = true

[include]
	# For username / creds / etc
	path = ~/dotfiles/gitconfig.local
[pull]
	# pull will only do fastforwards
	ff = only
